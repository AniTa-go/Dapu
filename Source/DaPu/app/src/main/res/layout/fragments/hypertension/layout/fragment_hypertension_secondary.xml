<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/coin_background"
    android:orientation="vertical">

    <include layout="@layout/top_bar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.05" />

        <LinearLayout


            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="基本情况:"
                android:textSize="20dp" />



            
            
            <TableLayout
                android:id="@+id/table4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="1">


                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="性别" />

                    <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/id_hypertension_questionnaire_home_segmentedgroup_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        segmentedgroup:sc_border_width="2dp"
                        segmentedgroup:sc_corner_radius="5dp">

                        <RadioButton
                            android:id="@+id/id_hypertension_questionnaire_home_segmentedgroup_sex_man"
                            style="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="男" />

                        <RadioButton
                            android:id="@+id/id_hypertension_questionnaire_home_segmentedgroup_sex_woman"
                            style="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="女" />
                    </info.hoang8f.android.segmented.SegmentedGroup>
                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="年龄" />

                    <EditText
                        android:id="@+id/id_hypertension_questionnaire_home_age"
                        android:layout_height="33dp"
                        android:background="@drawable/text_background"
                        android:textColor="@color/colorBlack" />

                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份证号" />

                    <EditText
                        android:id="@+id/id_hypertension_questionnaire_home_id_number"
                        android:layout_height="33dp"
                        android:background="@drawable/text_background"
                        android:textColor="@color/colorBlack" />


                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:text="文化程度" />

                    <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/id_hypertension_questionnaire_home_educational_level"
                        android:layout_weight="7"
                        android:orientation="horizontal"
                        segmentedgroup:sc_corner_radius="5dp">

                        <RadioButton
                            android:id="@+id/id_hypertension_questionnaire_home_educational_level_0"
                            style="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="小学及以下" />

                        <RadioButton
                            android:id="@+id/id_hypertension_questionnaire_home_educational_level_1"
                            style="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="中学/中专" />

                        <RadioButton
                            android:id="@+id/id_hypertension_questionnaire_home_educational_level_3"
                            style="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="大专及以上" />

                    </info.hoang8f.android.segmented.SegmentedGroup>


                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView

                        android:layout_gravity="center_vertical"

                        android:text="糖尿病病程" />

                    <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/id_hypertension_questionnaire_home_database_level"
                        android:orientation="horizontal"
                        segmentedgroup:sc_corner_radius="5dp">

                        <RadioButton
                            android:id="@+id/id_hypertension_questionnaire_home_database_level0"
                            style="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="小于5年" />

                        <RadioButton
                            android:id="@+id/id_hypertension_questionnaire_home_database_level1"
                            style="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5年-10年" />

                        <RadioButton
                            android:id="@+id/id_hypertension_questionnaire_home_database_level2"
                            style="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=">10年" />

                    </info.hoang8f.android.segmented.SegmentedGroup>


                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="胰岛素治疗"
                        android:textColor="@color/colorBlack" />


                    <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/id_hypertension_questionnaire_home_insulin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        segmentedgroup:sc_border_width="2dp"
                        segmentedgroup:sc_corner_radius="5dp">

                        <RadioButton
                            android:id="@+id/id_hypertension_questionnaire_home_insulin_true"
                            style="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="是" />

                        <RadioButton
                            android:id="@+id/id_hypertension_questionnaire_home_insulin_false"
                            style="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="否" />


                    </info.hoang8f.android.segmented.SegmentedGroup>
                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="工作状态"
                        android:textColor="@color/colorBlack" />


                    <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/id_hypertension_questionnaire_home_work_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        segmentedgroup:sc_border_width="2dp"
                        segmentedgroup:sc_corner_radius="5dp">


                        <RadioButton
                            android:id="@+id/id_diabetes_questionnaire_home_work_status_0"
                            style="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="离退休" />

                        <RadioButton
                            android:id="@+id/id_hypertension_questionnaire_home_work_status_1"
                            style="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="在职" />

                        <RadioButton
                            android:id="@+id/id_hypertension_questionnaire_home_work_status_2"
                            style="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未就业" />


                    </info.hoang8f.android.segmented.SegmentedGroup>
                </TableRow>


                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="服降糖药种类"
                        android:textColor="@color/colorBlack" />


                    <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/id_hypertension_questionnaire_home_antihypertensive_drugs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        segmentedgroup:sc_border_width="2dp"
                        segmentedgroup:sc_corner_radius="5dp">


                        <RadioButton
                            android:id="@+id/id_hypertension_questionnaire_home_antihypertensive_drugs_0"
                            style="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="1种" />

                        <RadioButton
                            android:id="@+id/id_hypertension_questionnaire_home_antihypertensive_drugs_1"
                            style="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2种" />

                        <RadioButton
                            android:id="@+id/id_hypertension_questionnaire_home_antihypertensive_drugs_2"
                            style="@style/RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3种及以上" />


                    </info.hoang8f.android.segmented.SegmentedGroup>
                </TableRow>


                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服降压药总粒数"
                        android:textColor="@color/colorBlack" />

                    <EditText
                        android:id="@+id/id_hypertension_questionnaire_antihypertensive_drug_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_background"

                        android:textColor="@color/colorBlack" />
                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="目前空腹血糖"
                        android:textColor="@color/colorBlack" />

                    <EditText
                        android:id="@+id/id_hypertension_questionnaire_antihypertensive_fasting_blood_sugar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_background"
                        android:text="23"
                        android:textColor="@color/colorBlack" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mmol/l"
                        android:textColor="@color/colorBlack" />
                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="胰岛素一天总量"
                        android:textColor="@color/colorBlack" />

                    <EditText
                        android:id="@+id/id_hypertension_questionnaire_antihypertensive_total_insulin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_background"
                        android:textColor="@color/colorBlack" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="u"
                        android:textColor="@color/colorBlack" />
                </TableRow>

            </TableLayout>


        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.05" />
    </LinearLayout>


</LinearLayout>